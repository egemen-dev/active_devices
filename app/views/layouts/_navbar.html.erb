<%# When no one is signed in %>
<% unless user_signed_in? || device_signed_in? %>
  <%= link_to "Log in as User",  new_user_session_path %>
  <%= link_to "Sign up as User",  new_user_registration_path %>
  <%= link_to "Log in as Device",  new_device_session_path %>
<% end %>


<%# When user signed in %>
<% if current_user %>

  <%= button_to "Log out", destroy_user_session_path, method: :delete  %>
  <p>You are logged-in as <strong>user</strong>, <%= current_user.email %><p> 
  <%= link_to "My Devices",  all_devices_path %> |
  <%= link_to "Add New Device",  new_device_registration_path %>

<%# When device signed in %>
<% elsif current_device %>
  <%= button_to "Log out", destroy_device_session_path, method: :delete  %>
  <p>You are logged-in as <strong>device</strong>, <%= current_device.name %><p>

<% end %>